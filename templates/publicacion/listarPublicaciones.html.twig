{% extends 'base.html.twig' %}

{% block contenido %} 

{% include "default/alertasFlash.html.twig" %}

<h6 class="tituloColorOficial">Noticias</h6>

<blockquote class="textoBlockquote">
 <p><strong><i class="material-icons left">info</i> Se listan las ultimas noticias mas recientes</strong></p>
</blockquote>

<div class="row">
  
  {# Iteramos sobre todas las noticias #}
  {% for publicacion in publicaciones %}
    <!-- Noticia -->
    <div class="col s12 m12">           
      <div class="card horizontal">
        <div class="card-image">
          {% if publicacion.getImagenes()|length > 0 %}
           {% set imagen = publicacion.getImagenes()|first %}
           <img src="{{ asset(imagen.url) }}">             
          {% else %}
           <img src="{{ asset('img/imagen-no-disponible.png') }}">
          {% endif %} 
        </div>
        <div class="card-stacked">
          <div class="card-content">
           <span class="card-title titulo"><strong>{{ publicacion.titulo }}</strong></span>   
            <p class="parrafoNoticia">{{ publicacion.descripcion }}</p>
          </div>
          <div class="card-action">
           <a class="waves-effect waves-light btn-small colorOficial white-text" href="{{ path('app_publicacion_ver',{'idPublicacion': publicacion.id}) }}">Ver Mas</a> 
          </div>
        </div>
      </div>
    </div>
    <!-- Noticia -->
      
  {% endfor %}
  {# Iteramos sobre todas las noticias #}


</div>


{% endblock %}